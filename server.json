{
  "$schema": "https://schemas.nimblebrain.ai/v1/nimblebrain-server.schema.json",
  "name": "ai.nimblebrain/registry-tools",
  "description": "Search and resolve MCP server packages from the mpak registry",
  "version": "0.1.0",
  "title": "Registry Tools MCP Server",
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-registry-tools",
    "source": "https://github.com/NimbleBrainInc/mcp-registry-tools"
  },
  "_meta": {
    "ai.nimblebrain/v1": {
      "runtime": "python:3.13",
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": false
      },
      "display": {
        "category": "developer-tools",
        "tags": [
          "registry",
          "search",
          "mpak"
        ]
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "250m"
        },
        "requests": {
          "memory": "128Mi",
          "cpu": "50m"
        }
      },
      "scaling": {
        "minReplicas": 1,
        "maxReplicas": 2
      }
    }
  }
}
